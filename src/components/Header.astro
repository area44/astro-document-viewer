---
import ThemeToggle from "@/components/ThemeToggle.astro";
---

<header class="bg-background sticky top-0 z-40 w-full border-b">
  <div class="container flex h-16 items-center justify-between">
    <!-- Left: Logo / Title -->
    <a 
      href="/" 
      class="flex items-center space-x-2 font-bold hover:opacity-80 transition-opacity"
    >
      <span>Astro Document Viewer</span>
    </a>

    <!-- Right: Navigation & Actions -->
    <nav 
      class="flex items-center gap-2" 
      aria-label="Main navigation"
    >
      <!-- Additional nav links could go here -->
      <ThemeToggle />
    </nav>
  </div>
</header>
