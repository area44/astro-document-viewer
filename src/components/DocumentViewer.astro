---
interface Props {
  src: string;
}

const { src } = Astro.props;
---

<div class="relative w-full">
  <div
    class="relative overflow-hidden rounded-md border bg-background shadow-sm"
  >
    <iframe
      src={`https://docs.google.com/viewer?url=${encodeURIComponent(src)}&embedded=true`}
      class="w-full h-[65vh] min-h-130"
      loading="lazy"
      referrerpolicy="no-referrer"></iframe>
  </div>
</div>
